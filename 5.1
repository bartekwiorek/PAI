<INPUT type = 'number' id='x'>
<INPUT type = 'number' id='z'>   
<INPUT type = 'button' id='t' value='kalkulator' onClick='kalkulator()'>
<script>

function kalkulator(){
    var x=document.getElementById('x').value;
    var z=document.getElementById('z').value;

    x=parseFloat(x)
    z=parseFloat(z)
    
    if(x==0 || z==0) {
        alert('Liczba nie może być zerem')
    }

    var Mnoz = x*z
    var Dzie = x/z
    var Doda = x+z
    var Odej = x-z

    Dodawanie.innerHTML=Doda
    Dzielenie.innerHTML=Dzie
    Mnożenie.innerHTML=Mnoz
    Odejmowanie.innerHTML=Odej
}
</script>
<p id="Dodawanie">Dodawanie</p>
<p id="Odejmowanie">Odejmowanie</p>
<p id="Dzielenie">Dzielenie</p>
<p id="Mnożenie">Mnożenie</p>

